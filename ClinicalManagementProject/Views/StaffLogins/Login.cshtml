@model ClinicalManagementProject.Models.StaffLogin

@{
    Layout = "~/Views/Shared/LayoutOut.cshtml";
    ViewData["Title"] = "Login";
}
<body>
    <div class="container-fluid px-1 px-md-5 px-lg-1 px-xl-5 py-5 mx-auto">
        <div class="card card0 border-0">
            <div class="row d-flex">
                <div class="col-lg-6">
                    <div class="card1 pb-5">
                        <div class="row px-3 justify-content-center mt-4 mb-5 border-line"> <img src="https://t3.ftcdn.net/jpg/03/62/56/24/360_F_362562495_Gau0POzcwR8JCfQuikVUTqzMFTo78vkF.jpg" class="image"> </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="card2 card border-0 px-4 py-5">
                        <div class="row px-3 mb-4">
                            <h1> <b> The Stone Clinic</b></h1>
                            <div class="line"></div> <small class="or text-center"></small>
                            <div class="line"></div>
                        </div>
                        <form asp-action="Login">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="row px-3">

                                <label asp-for="UserName" class="control-label"></label>
                                <input asp-for="UserName" class="form-control" placeholder="Enter your User Name" />
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                            <div class="row px-3">
                                <label asp-for="Password" class="control-label"></label>
                                <input asp-for="Password" class="form-control" placeholder="Enter your Password" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="row px-3 mb-4">
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Login" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="bg-blue py-4">
                <div class="row px-3 flex">
                    <a href="https://www.facebook.com/StoneClinic/"><b>Facebook</b></a>|
                    <a href="https://www.instagram.com/stoneclinic/?hl=en"><b>Instagram</b></a>|
                    <a href="https://twitter.com/stoneclinic?lang=en"><b>Twitter</b></a>
                </div>
                <div class="row px-3">

                </div>
            </div>
        </div>
    </div>
</body>
<style>
